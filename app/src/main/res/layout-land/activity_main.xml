<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="518dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="end"
        android:text="0"
        android:textSize="36sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operationTextView"
        android:layout_width="511dp"
        android:layout_height="18dp"
        android:gravity="end"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/mainTextView"
        app:layout_constraintStart_toStartOf="@+id/mainTextView"
        app:layout_constraintTop_toBottomOf="@+id/mainTextView" />

    <fragment
        android:id="@+id/fragmentScientific3"
        android:name="com.example.lr2.Scientific3"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentScientific1"
        app:layout_constraintEnd_toStartOf="@+id/fragmentScientific1"
        app:layout_constraintStart_toStartOf="@+id/mainTextView"
        app:layout_constraintTop_toTopOf="@+id/fragmentScientific1"
        app:layout_constraintVertical_bias="0.0"
        tools:layout="@layout/fragment_scientific3" />

    <fragment
        android:id="@+id/fragmentScientific2"
        android:name="com.example.lr2.Scientific2"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentScientific1"
        app:layout_constraintEnd_toStartOf="@+id/fragmentScientific1"
        app:layout_constraintStart_toStartOf="@+id/mainTextView"
        app:layout_constraintTop_toTopOf="@+id/fragmentScientific1"
        tools:layout="@layout/fragment_scientific2" />

    <fragment
        android:id="@+id/fragmentScientific1"
        android:name="com.example.lr2.Scientific1"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentScientificMain"
        app:layout_constraintEnd_toStartOf="@+id/fragmentScientificMain"
        app:layout_constraintTop_toTopOf="@+id/fragmentScientificMain"
        tools:layout="@layout/fragment_scientific1" />

    <fragment
        android:id="@+id/fragmentScientificMain"
        android:name="com.example.lr2.ScientificMain"
        android:layout_width="110dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentBasicBlock"
        app:layout_constraintEnd_toStartOf="@+id/fragmentBasicBlock"
        app:layout_constraintTop_toTopOf="@+id/fragmentBasicBlock"
        tools:layout="@layout/fragment_scientific_main" />

    <fragment
        android:id="@+id/fragmentBasicBlock"
        android:name="com.example.lr2.BasicBlock"
        android:layout_width="200dp"
        android:layout_height="168dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainTextView"
        app:layout_constraintTop_toBottomOf="@+id/operationTextView"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/fragment_basic_block" />

    <Button
        android:id="@+id/buttonSwitchPageLand"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="220dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentScientificMain"
        app:layout_constraintEnd_toEndOf="@+id/fragmentScientific1"
        app:layout_constraintStart_toStartOf="@+id/mainTextView"
        app:layout_constraintTop_toBottomOf="@+id/fragmentScientific1"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>